<%- model_class = Tag -%>
<h1 align='center'>Add new tag</h1>

<%= form_for @tag, :action => "create", :html => {:class => "ui form"} do |f| %>
  
  <div class="field">
      <label>Name:</label>
      <%= f.text_field :name %>
  </div>

  <div class="field">
      <label>Description:</label>
      <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= recaptcha_tags %>
  </div>

  <%= f.submit "Create", :class => "ui blue button" %>
<% end %>